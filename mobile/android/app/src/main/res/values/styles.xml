<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- jouw donkere basis -->
        <item name="android:windowBackground">#0d131b</item>

        <!-- icons standaard licht -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">#0d131b</item>

        <!-- (toegevoegd) nav bar consistent -->
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:navigationBarColor">#0d131b</item>

    </style>

    <style name="AppTheme.NoActionBarLaunch" parent="Theme.SplashScreen">
        <item name="android:windowSplashScreenBackground">#0d131b</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>
        <item name="postSplashScreenTheme">@style/AppTheme.NoActionBar</item>

        <!-- jouw settings -->
        <item name="android:windowLightStatusBar">false</item>

        <!-- (toegevoegd) voorkom fallback naar een andere window background -->
        <item name="android:windowBackground">#0d131b</item>

        <!-- (toegevoegd) nav bar consistent -->
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:navigationBarColor">#0d131b</item>
    </style>
</resources>